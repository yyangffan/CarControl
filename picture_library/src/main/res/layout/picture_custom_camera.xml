<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ResourceName">

    <com.luck.picture.lib.camera.CustomCameraView
        android:id="@+id/cameraView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:background="#11000000"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pic_cus_takpic"
            android:background="@drawable/bg_solder_bl"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/picture_icon_camera" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pic_cus_recy"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>

    <TextView
        android:id="@+id/pic_cus_watermarker"
        android:layout_width="wrap_content"
        android:lineSpacingExtra="3dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:visibility="gone"
        android:textColor="@color/picture_color_white"
        android:padding="8dp"
        tools:text="1数量的感觉我呢"
        android:textSize="42sp" />
    <TextView
        android:id="@+id/pic_cus_watermarkershow"
        android:layout_width="wrap_content"
        android:lineSpacingExtra="3dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/picture_color_white"
        android:padding="8dp"
        tools:text="1数量的感觉我呢"
        android:textSize="16sp" />
</FrameLayout>